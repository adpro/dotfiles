{{- $machine := promptStringOnce . "machine" "Is this machine for work or home" -}}
{{- $name := promptStringOnce . "name" "Your name" -}}
{{- $personalEmail := promptStringOnce . "personalEmail" "Personal email address" -}}
{{- $workEmail := promptStringOnce . "workEmail" "Work email address" -}}
{{- $companyName := promptStringOnce . "companyName" "Company name in lowercase" -}}
{{- $workLocalDomain := promptStringOnce . "workLocalDomain" "Work local domain (lowercase)" -}}
{{- $workAdminAccountName:= promptStringOnce . "workAdminAccountName" "Work admin account name" -}}
{{- $awsAccessMgmt := promptStringOnce . "awsAccessMgmt" "awsAccessMgmt" -}}
{{- $awsSecretMgmt := promptStringOnce . "awsSecretMgmt" "awsSecretMgmt" -}}
{{- $awsAccessPlayground := promptStringOnce . "awsAccessPlayground" "awsAccessPlayground" -}}
{{- $awsSecretPlayground := promptStringOnce . "awsSecretPlayground" "awsSecretPlayground" -}}
{{- $awsAccessMaster := promptStringOnce . "awsAccessMaster" "awsAccessMaster" -}}
{{- $awsSecretMaster := promptStringOnce . "awsSecretMaster" "awsSecretMaster" -}}
{{- $awsAccessFlash := promptStringOnce . "awsAccessFlash" "awsAccessFlash" -}}
{{- $awsSecretFlash := promptStringOnce . "awsSecretFlash" "awsSecretFlash" -}}
{{- $azuredevopsSvcToken := promptStringOnce . "azuredevopsSvcToken" "AZUREDEVOPS_ADMIN_SVC_TOKEN" -}}
{{- $slackAdminSvcToken := promptStringOnce . "slackAdminSvcToken" "SLACK_ADMIN_SVC_TOKEN" -}}
{{- $azuredevopsExtGitPat := promptStringOnce . "azuredevopsExtGitPat" "AZURE_DEVOPS_EXT_GIT_SOURCE_PASSWORD_OR_PAT" -}}

[data]
    machine = {{ $machine | quote }}
    name = {{ $name | quote }}
    personalEmail = {{ $personalEmail | quote }}
    workEmail = {{ $workEmail | quote }}
    companyName = {{ $companyName | quote }}
    awsAccessMgmt = {{ $awsAccessMgmt | quote }}
    awsSecretMgmt = {{ $awsSecretMgmt | quote }}
    awsAccessPlayground = {{ $awsAccessPlayground | quote }}
    awsSecretPlayground = {{ $awsSecretPlayground | quote }}
    awsAccessMaster = {{ $awsAccessMaster | quote }}
    awsSecretMaster = {{ $awsSecretMaster | quote }}
    awsAccessFlash = {{ $awsAccessFlash | quote }}
    awsSecretFlash = {{ $awsSecretFlash | quote }}
    azuredevopsSvcToken = {{ $azuredevopsSvcToken | quote }}
    slackAdminSvcToken = {{ $slackAdminSvcToken | quote }}
    azuredevopsExtGitPat = {{ $azuredevopsExtGitPat | quote }}
    workLocalDomain = {{ $workLocalDomain | quote }}
    workAdminAccountName = {{ $workAdminAccountName | quote }}
